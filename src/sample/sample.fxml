<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="437.0" style="-fx-background-color: #8FBC8F;">
         <children>
            <TextArea fx:id="taMeaning" layoutX="14.0" layoutY="55.0" opacity="0.3" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #ADD8E6;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="55.0" />
         </children>
      </AnchorPane>
   </center>
   <top>
      <MenuBar fx:id="mbTaskbar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Settings">
              <items>
                  <Menu mnemonicParsing="false" text="Language">
                    <items>
                        <RadioMenuItem fx:id="rmiEnToVi" mnemonicParsing="false" onAction="#checkLanguage" text="English to Vietnames">
                           <toggleGroup>
                              <ToggleGroup fx:id="tgLanguage" />
                           </toggleGroup></RadioMenuItem>
                        <RadioMenuItem fx:id="rmiViToEn" mnemonicParsing="false" onAction="#checkLanguage" text="Vietnames to English" toggleGroup="$tgLanguage" />
                    </items>
                  </Menu>
                <MenuItem mnemonicParsing="false" text="Theme" />
              </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <AnchorPane prefHeight="400.0" prefWidth="242.0" style="-fx-background-color: LightSeaGreen;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btSearch" layoutX="167.0" layoutY="14.0" mnemonicParsing="false" onAction="#eventHandler" text="Search" />
            <TextField fx:id="tfSearch" layoutX="10.0" layoutY="14.0" onAction="#eventHandler" prefHeight="31.0" prefWidth="153.0" promptText="Search" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="14.0" />
            <ListView fx:id="lvTarget" layoutX="14.0" layoutY="55.0" onEditStart="#eventHandler" opacity="0.3" prefHeight="200.0" prefWidth="201.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="55.0" />
         </children>
      </AnchorPane>
   </left>
</BorderPane>
